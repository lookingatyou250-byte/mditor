{
  "name": "mditor",
  "version": "2.9.0",
  "description": "极简 Markdown 编辑器",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "bundle:editor": "esbuild js/modules/editor.src.js --bundle --minify --outfile=js/modules/editor.bundle.js --format=iife",
    "icons": "node scripts/process-icon.js && node scripts/generate-icons.js && node scripts/create-doc-icon.js && node scripts/create-installer-images.js",
    "prebuild": "npm run bundle:editor && npm run icons",
    "build": "electron-builder",
    "build:win": "npm run prebuild && electron-builder --win",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "build:all": "npm run prebuild && electron-builder --win --mac"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.27.2",
    "icon-gen": "^5.0.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.mditor.app",
    "productName": "mditor",
    "icon": "build/icon",
    "directories": {
      "output": "dist"
    },
    "fileAssociations": [
      {
        "ext": "md",
        "name": "Markdown Document",
        "description": "Markdown 文档",
        "icon": "build/doc",
        "role": "Editor"
      },
      {
        "ext": "markdown",
        "name": "Markdown Document",
        "description": "Markdown 文档",
        "icon": "build/doc",
        "role": "Editor"
      }
    ],
    "files": [
      "**/*",
      "!dist/**",
      "!scripts/**",
      "!node_modules/.cache/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerSidebar": "build/installerSidebar.png",
      "uninstallerSidebar": "build/installerSidebar.png",
      "installerHeader": "build/installerHeader.png",
      "installerHeaderIcon": "build/icon.ico",
      "include": "build/installer.nsh",
      "license": "LICENSE"
    }
  },
  "dependencies": {
    "@codemirror/commands": "^6.10.1",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.12.1",
    "@codemirror/state": "^6.5.3",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.9",
    "dompurify": "^3.3.1"
  }
}
